# print("quit.")# ----- Task 1 - Working with Lists -----
print("Task 1 - Working with Lists")
# Step 1: Create a list of favorite fruits
fruits = ['apple', 'banana', 'cherry', 'date', 'elderberry']
print("Original list:", fruits)

# Step 2: Append a new fruit
fruits.append('fig')
print("After adding a fruit:", fruits)

# Step 3: Remove one fruit
fruits.remove('apple')
print("After removing a fruit:", fruits)

# Step 4: Print the list in reverse order using slicing
print("Reversed list:", fruits[::-1])

print("\n" + "-"*50 + "\n")

# ----- Task 2 - Exploring Dictionaries -----
print("Task 2 - Exploring Dictionaries")
# Step 1: Create a dictionary with personal info
my_info = {
    "name": "Joshith",
    "age": 21,
    "city": "Atlanta"
}

# Step 2: Add a new key-value pair
my_info["favorite color"] = "Blue"

# Step 3: Update the city
my_info["city"] = "New York"

# Step 4: Print all keys and values
print("Keys:", ', '.join(my_info.keys()))
print("Values:", ', '.join(str(value) for value in my_info.values()))

print("\n" + "-"*50 + "\n")

# ----- Task 3 - Using Tuples -----
print("Task 3 - Using Tuples")
# Step 1: Create a tuple
favorite_things = ('Inception', 'Bohemian Rhapsody', '1984')
print("Favorite things:", favorite_things)

# Step 2: Try to change an element
try:
    favorite_things[0] = 'Interstellar'
except TypeError:
    print("Oops! Tuples cannot be changed.")

# Step 3: Print the length of the tuple
print("Length of tuple:", len(favorite_things))
